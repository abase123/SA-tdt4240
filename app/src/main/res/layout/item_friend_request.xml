<?xml version="1.0" encoding="utf-8"?>
<!-- item_friend_request.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:padding="16dp">
    <LinearLayout
            android:id="@+id/userCard"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"

            android:elevation="@dimen/cardview_default_elevation"
            android:background="@drawable/user_card_shape"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

    <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:layout_margin="5dp"
            android:elevation="10dp">

        <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sports"
                android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tvFriendRequestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_alignBottom="@+id/btnAcceptRequest"
            />


        <Button
                android:id="@+id/btnAcceptRequest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Accept"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@+id/tvFriendRequestName"
                android:layout_marginEnd="8dp"
                android:layout_alignBottom="@+id/btnRejectRequest"/>

        <Button
                android:id="@+id/btnRejectRequest"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Reject"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/btnAcceptRequest"
                app:layout_constraintTop_toTopOf="@+id/btnAcceptRequest"
                android:layout_marginStart="8dp" />
    </LinearLayout>
</RelativeLayout>
